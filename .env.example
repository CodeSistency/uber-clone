# Environment Configuration for Uber Clone App
# Copy this file to .env and fill in your actual values

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Backend API URL (change for production)
EXPO_PUBLIC_SERVER_URL=https://your-api-domain.com

# WebSocket URL for real-time features
EXPO_PUBLIC_WS_URL=wss://your-api-domain.com

# =============================================================================
# GOOGLE MAPS APIs (Required)
# =============================================================================

# Google Places API Key - Used for location autocomplete and place search
# Get from: https://console.cloud.google.com/apis/credentials
EXPO_PUBLIC_PLACES_API_KEY=your_google_places_api_key_here

# Google Directions API Key - Used for calculating routes and directions
# Get from: https://console.cloud.google.com/apis/credentials
EXPO_PUBLIC_DIRECTIONS_API_KEY=your_google_directions_api_key_here

# =============================================================================
# STRIPE PAYMENT PROCESSING (Required)
# =============================================================================

# Stripe Publishable Key - Safe to expose in client-side code
# Get from: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Secret Key - NEVER expose this in client-side code
# Only used in backend/server-side code
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# =============================================================================
# FIREBASE CONFIGURATION (Required)
# =============================================================================

# Firebase API Key - Get from Firebase Console > Project Settings > General > Your apps
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase Auth Domain
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Project ID
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Cloud Messaging Sender ID
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here

# Firebase App ID
EXPO_PUBLIC_FIREBASE_APP_ID=1:your_app_id_here:web:your_web_app_id

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# Geoapify API Key - Alternative to Google Maps for geocoding
# Get from: https://www.geoapify.com/
EXPO_PUBLIC_GEOAPIFY_API_KEY=your_geoapify_api_key_here

# Database URL - For NeonDB/PostgreSQL direct connections
# Only needed if connecting directly from mobile app (not recommended for production)
DATABASE_URL=postgresql://username:password@hostname:port/database

# =============================================================================
# LEGACY AUTHENTICATION (Being phased out)
# =============================================================================

# Clerk Authentication Key - Legacy, will be removed in future versions
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment: development | staging | production
NODE_ENV=development
